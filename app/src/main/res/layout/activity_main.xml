<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="CEP"
            android:ems="10"
            android:id="@+id/editTextCep"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCep"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Logradouro"
                android:id="@+id/textViewLogradouro"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Complemento"
                android:layout_marginTop="8dp"
                android:id="@+id/textViewComplemento"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Localidade"
                android:id="@+id/textViewLocalidade"
                android:layout_marginTop="8dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Bairro"
                android:id="@+id/textViewBairro"
                android:layout_marginTop="8dp"
        />
        <TextView
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:text="Uf"
                android:id="@+id/textViewUf"
                android:layout_marginTop="8dp"
        />

    </LinearLayout>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/buttonSearch" app:layout_constraintStart_toEndOf="@+id/editTextCep" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_search"
    />

</android.support.constraint.ConstraintLayout>